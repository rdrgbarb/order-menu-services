root = true

# ----- Default for all files -----
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ----- Java -----
[*.java]
indent_size = 4
max_line_length = 120

# ----- Kotlin (if ever used) -----
[*.kt]
indent_size = 4
max_line_length = 120

# ----- XML / POMs -----
[*.xml]
indent_size = 2

# ----- YAML -----
[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2

# ----- JSON -----
[*.json]
indent_size = 2

# ----- Markdown -----
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # keep markdown hard breaks when needed

# ----- Shell scripts -----
[*.sh]
indent_size = 2

# ----- Makefile -----
[Makefile]
indent_style = tab
