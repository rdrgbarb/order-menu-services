root = true

# ----- Default for all files -----
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ----- Java -----
[*.java]
max_line_length = 120

# ----- Markdown -----
[*.md]
trim_trailing_whitespace = false # keep markdown hard breaks when needed

# ----- Makefile -----
[Makefile]
indent_style = tab
